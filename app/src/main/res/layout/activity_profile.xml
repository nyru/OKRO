<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar1"
        android:background="@drawable/recttoolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:id="@+id/igv_back"
    android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Settings"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_below="@id/toolbar1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_firstname_settings"
    android:textSize="25sp"
    android:layout_weight="0.5"
    android:textColor="@color/colorPrimary"
    android:text="First Name"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:paddingLeft="5dp"
    android:textColor="@color/colorPrimary"
    android:id="@+id/ed_firstname_settings"
    android:layout_weight="0.5"
    android:inputType="text"
    android:background="@drawable/rectanglee"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_lastname_settings"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimary"
            android:text="Last Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:id="@+id/ed_lastname_settings"
            android:layout_weight="0.5"
            android:background="@drawable/rectanglee"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimary"
            android:text="Phone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:id="@+id/ed_phone"
            android:layout_weight="0.5"
            android:background="@drawable/rectanglee"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pincode"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimary"
            android:text="Pin Code"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:id="@+id/ed_pincode"
            android:layout_weight="0.5"
            android:background="@drawable/rectanglee"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:id="@+id/ll_address"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_address"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimary"
            android:text="Address"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:id="@+id/ed_address"
            android:layout_weight="0.5"
            android:background="@drawable/rectanglee"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:id="@+id/ll_address1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_address1"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimary"
          />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:id="@+id/ed_address1"
            android:layout_weight="0.5"
            android:background="@drawable/rectanglee"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:id="@+id/ll_address2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_address2"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimary"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:id="@+id/ed_address2"
            android:layout_weight="0.5"
            android:background="@drawable/rectanglee"/>

    </LinearLayout>


<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/rect"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:textAllCaps="false"
    android:id="@+id/btn_savedetails"
    android:layout_margin="20dp"
    android:text="Save Details"/>
</LinearLayout>







</RelativeLayout>